#include <iostream>

int main() {
    int number;

    std::cout << "Put in a number : ";
    std::cin >> number;

    if (number % 2 == 0) {
        std::cout << "Even" << std::endl;
    }
    else {
        std::cout << "Odd" << std::endl;
    }

    
}

                          up2
#include <iostream>

int main() {
    double num1, num2;
    char operation;

   
    std::cout << "first number(then enter): ";
    std::cin >> num1;
    std::cout << "second number(then enter): ";
    std::cin >> num2;
    std::cout << "input operation (+, -, *, /)(then enter): ";
    std::cin >> operation;

    double result;

    
    switch (operation) {
    case '+':
        result = num1 + num2;
        std::cout << "result: " << result << std::endl;
        break;
    case '-':
        result = num1 - num2;
        std::cout << "result: " << result << std::endl;
        break;
    case '*':
        result = num1 * num2;
        std::cout << "result: " << result << std::endl;
        break;
    case '/':
        if (num2 != 0) {
            result = num1 / num2;
            std::cout << "result: " << result << std::endl;
        }
        else {
            std::cout << "error dividing by 0" << std::endl;
        }
        break;
    default:
        std::cout << "error" << std::endl;
        break;
    }

    
}
                          up3 
#include <iostream>

int main() {
    char inputChar;

    
    std::cout << "enter charachter: ";
    std::cin >> inputChar;

    
    if (inputChar >= 'a' && inputChar <= 'z') {
        std::cout << "letter" << std::endl;
    }
    else if (inputChar >= 'A' && inputChar <= 'Z') {
        std::cout << "capital letter" << std::endl;
    }
    else if (inputChar >= '0' && inputChar <= '9') {
        std::cout << "digit" << std::endl;
    }
    else {
        std::cout << "other" << std::endl;
    }

    
} 
                           up4

#include <iostream>

int main() {
    int number;

   
    std::cout << "input number between 1 and 9: ";
    std::cin >> number;

   
    if (number < 1 || number > 9) {
        std::cout << "input number between 1 and 9 " << std::endl;
    }
    else {
        
        switch (number) {
        case 1: std::cout << "I" << std::endl; break;
        case 2: std::cout << "II" << std::endl; break;
        case 3: std::cout << "III" << std::endl; break;
        case 4: std::cout << "IV" << std::endl; break;
        case 5: std::cout << "V" << std::endl; break;
        case 6: std::cout << "VI" << std::endl; break;
        case 7: std::cout << "VII" << std::endl; break;
        case 8: std::cout << "VIII" << std::endl; break;
        case 9: std::cout << "IX" << std::endl; break;
        default:
            std::cout << "error!" << std::endl;
            break;
        }
    }

 
}
                          up5
#include <iostream>

int main() {
    int numbers[5];

    
    std::cout << "5 numbers: ";
    for (int i = 0; i < 5; ++i) {
        std::cin >> numbers[i];
    }

    bool isSawtooth = true;

   
    for (int i = 1; i < 4; ++i) { 
        if (!((numbers[i] >= numbers[i - 1] && numbers[i] >= numbers[i + 1]) ||
            (numbers[i] <= numbers[i - 1] && numbers[i] <= numbers[i + 1]))) {
            isSawtooth = false;
            break;
        }
    }

   
    if (isSawtooth) {
        std::cout << "yes" << std::endl;
    }
    else {
        std::cout << "no" << std::endl;
    }

  
}
                          up7
 #include <iostream>
#include <iomanip>

int main() {
    int hours, minutes;
    std::cout << "input hour (0-23): ";
    std::cin >> hours;
    std::cout << "input minutes (0-59): ";
    std::cin >> minutes;

    
    if (hours < 0 || hours > 23 || minutes < 0 || minutes > 59) {
        std::cout << "error" << std::endl;
        return 1;
    }

   
    minutes += 15;

    
    if (minutes >= 60) {
        minutes -= 60; 
        hours += 1;
    }

  
    if (hours >= 24) {
        hours -= 24;
    }

    
    std::cout << "time: "
        << std::setfill('0') << std::setw(2) << hours << ":"
        << std::setfill('0') << std::setw(2) << minutes << std::endl;

  
}
