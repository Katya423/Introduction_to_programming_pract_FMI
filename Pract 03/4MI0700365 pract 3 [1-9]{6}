#include <iostream>

int main() {
    int a, b, c;

    
    std::cout << "Input 3 numbers: ";
    std::cin >> a >> b >> c;

   
    if (a > b) std::swap(a, b);
    if (a > c) std::swap(a, c);
    if (b > c) std::swap(b, c);

    
    std::cout  << a << " " << b << " " << c << std::endl;

   
}
                       up9
                       #include <iostream>

int main() {
    int day, month, year;

    
    std::cout << "day(1-31): ";
    std::cin >> day;
    std::cout << "month (1-12): ";
    std::cin >> month;
    std::cout << "year: ";
    std::cin >> year;

    if (day < 1 || day > 31 || month < 1 || month > 12) {
        std::cout << "error!" << std::endl;
        return 1;
    }
   
    if (month < 3) {
        month += 12; 
        year--;
    }

    int k = year % 100;
    int j = year / 100; 

   
    int f = day + (13 * (month + 1)) / 5 + k + (k / 4) + (j / 4) - (2 * j);
    int dayOfWeek = f % 7;

   
    switch (dayOfWeek) {
    case 0: std::cout << "sat" << std::endl; break;
    case 1: std::cout << "sun" << std::endl; break;
    case 2: std::cout << "mon" << std::endl; break;
    case 3: std::cout << "tue" << std::endl; break;
    case 4: std::cout << "wed" << std::endl; break;
    case 5: std::cout << "thu" << std::endl; break;
    case 6: std::cout << "fri" << std::endl; break;
   
    }

  
}
